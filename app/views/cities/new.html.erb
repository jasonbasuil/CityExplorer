<h1> Create a New City </h1>

<% if flash[:errors]%>
  <% flash[:errors].each do |error|%>
    <p style='color:red'><%= error%> </p>
  <%end%>
<%end%>

<%= form_for @city do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %>
  <%= f.label "State" %>
  <%= f.text_field :state %>
  <%= f.submit "Create City" %>
<% end %>
