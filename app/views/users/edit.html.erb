<h1> Update Your Account </h1>

<% if flash[:errors]%>
  <% flash[:errors].each do |message|%>
    <p style='color:red'><%= message%> </p>
  <%end%>
<%end%>

<%= form_for @user do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %>
  <%= f.label "Email" %>
  <%= f.text_field :email %>
  <%= f.label "Bio" %>
  <%= f.text_area :bio %>
  <%= f.submit "Update Account" %>
<% end %>
