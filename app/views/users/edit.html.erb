<div class="row">
  <div class="col-sm-6">
    <div class="center">
      <h1> Update Your Account </h1>
    </div>
  </div>
</div>

<% if flash[:errors]%>
  <% flash[:errors].each do |message|%>
    <p style='color:red'><%= message%> </p>
  <%end%>
<%end%>

<%= form_for @user do |f| %>

<div class="row">
  <div class="col-sm-3">
  <div class="form_fields_right"

    <br><br>
    <%= f.label "First Name" %><br>
    <%= f.label "Last Name" %><br>
    <%= f.label "Email" %><br>
    <%= f.label "password" %><br>
    <%= f.label "City"%><br>
    <%= f.label "Profile Photo" %><br>
    <br>
  </div>
  </div>

  <div class="col-sm-3">
  <div class="form_fields_left">
    <br><br>
    <%= f.text_field :first_name %><br><br>
    <%= f.text_field :last_name %><br><br>
    <%= f.text_field :email %><br><br>
    <%= f.password_field :password %><br><br>
    <%= f.collection_select :city_id, City.all, :id, :name%><br><br>
    <%= f.file_field :avatar %><br><br>
  </div>
  </div>

</div>
</div>

<div class="row">
  <div class="col-sm-6">
  <div class="center">
    <%= f.submit "Update Account" %><br>
    <br>
    <br>
  </div>
  </div>
</div>

<% end %>


