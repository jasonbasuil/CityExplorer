
<header>
  <div class="overlay"></div>
  <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
    <source src="https://storage.googleapis.com/coverr-main/mp4/Mt_Baker.mp4" type="video/mp4">
  </video>
  <div class="container h-100">
    <div class="d-flex h-100 text-center align-items-center">
      <div class="w-100 text-white">
        <h1 class="display-3">Welcome back, <%= @user.first_name %></h1>
        <p class="lead mb-0">We missed you.</p>
      </div>
    </div>
  </div>
</header>




<br>
<h2 class="title">Check out local events</h2>
<p class="sub_title">Link at the bottom of the page.</p>
<br>
<br>
<div class="row">
  <div class="col-sm-3">
    <div class="center">
      <% if @user.avatar.attached? %>
      <image src="<%=(url_for(@user.avatar))%>" class="rounded-circle" style="display:inline"  height="250">
      <%end%>
      <p style="font-size:40px"><%=@user.first_name%> <%=@user.last_name%></p>
      <a class="button" href="profile/edit" role="button">
        Edit Profile
      </a>

    </div>
  </div>

  <div class="col-sm-6">
    <div class="center">
      <h2> Events You are Scheduled to Attend </h2>
      <div class="list_main">

      <% find_attended_events.each do |event| %>
        <li>
          <%= link_to event.name, event %> (<%=event.date.strftime('%B %d, %Y')%>)
        </li>
      <% end %>
    </div>
    </div>

  </div>
  <div class="col-sm-3">
    <div class="list_side">
    <h4> My Hosted Events </h4>
    <% find_hosted_events.each do |event| %>
      <li>
        <%= link_to event.name, event %>
      </li>
    <% end %>
    </div>
  </div>
</div>




<nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-bottom">
  <a class="navbar-brand" href="/"><img src="https://i.ibb.co/2sJQTNR/Logo-Makr-39-Xboe.png" alt="Logo-Makr-39-Xboe" border="0" height="40"></a>
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" href="/profile">My Profile</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/events">Events</a>
    </li>
  </ul>
  <div style="padding-left: 950px;">
    <a class="button" href="/events/new" role="button">
    Host New Event
    </a>
  </div>
</nav>

<div class="container-fluid"><br>

</div>
