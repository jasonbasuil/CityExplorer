<%if flash[:notice]%>
  <%style='color:green'%>
  <%= flash[:notice] %>
<%end%>
<header>
  <div class="overlay"></div>
  <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
    <source src="https://storage.googleapis.com/coverr-main/mp4/Mt_Baker.mp4" type="video/mp4">
  </video>
  <div class="container h-100">
    <div class="d-flex h-100 text-center align-items-center">
      <div class="w-100 text-white">
        <h1 class="display-3">Welcome back, <%= @user.first_name %></h1>
        <p class="lead mb-0">We missed you.</p>
      </div>
    </div>
  </div>
</header>




<br>
<h2 class="title">Check out your new local events</h2>
<p class="sub_title">We have some waiting at the bottom of the page.</p>
<br>
<br>
<div class="row">
  <div class="col-sm-3">
    <div class="center">
      <% if @user.avatar.attached? %>
      <image src="<%=(url_for(@user.avatar))%>" class="rounded-circle" style="display:inline"  height="250">
      <%end%>
      <p style="font-size:40px"><%=@user.first_name%> <%=@user.last_name%></p>
      <br>
      Current city: <%=@user.city_id%>

    </div>
  </div>

  <div class="col-sm-6">
    <div class="center">
      <h4> Events You are Scheduled to Attend </h4>
      <% find_attended_events.each do |event| %>
        <li>
          <%= link_to event.name, event %>
        </li>
      <% end %>
    </div>

  </div>
  <div class="col-sm-3">
    <h6> My Hosted Events </h6>
    <% find_hosted_events.each do |event| %>
      <li>
        <%= link_to event.name, event %>
      </li>
    <% end %>
  </div>
</div>





