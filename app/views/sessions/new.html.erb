
<h1>Login</h1>

<% if flash[:message] %>
  <p><%= flash[:message] %></p>
<%end%>

<%= form_tag login_path do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= submit_tag "Login" %>
<%end%>

<h3>Don't have an account? Sign up <%=link_to "here", new_user_path %></h3> 
